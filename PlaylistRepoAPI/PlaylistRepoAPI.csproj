<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <OutputPath>$(SolutionDir)out\api\</OutputPath>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <SpaRoot>..\playlistrepoclient</SpaRoot>
    <SpaProxyLaunchCommand>npm run dev</SpaProxyLaunchCommand>
    <SpaProxyServerUrl>https://localhost:59584</SpaProxyServerUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.SpaProxy" Version="9.0.8" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.7" />
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="9.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="9.0.3" />
    <PackageReference Include="taglib-sharp-netstandard2.0" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\playlistrepoclient\playlistrepoclient.esproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\PlaylistRepoLib\PlaylistRepoLib.csproj" />
  </ItemGroup>

  <!-- Run React build before publishing -->
  <Target Name="PublishRunWebpack" BeforeTargets="PrepareForPublish">
    <Exec WorkingDirectory="$(MSBuildProjectDirectory)\..\playlistrepoclient"
          Command="npm install" />
    <Exec WorkingDirectory="$(MSBuildProjectDirectory)\..\playlistrepoclient"
          Command="npm run build" />

    <!-- Copy React build output to wwwroot -->
    <ItemGroup>
      <DistFiles Include="$(MSBuildProjectDirectory)\..\playlistrepoclient\dist\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(DistFiles)"
          DestinationFolder="$(MSBuildProjectDirectory)\wwwroot\%(RecursiveDir)"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
